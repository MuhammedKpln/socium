{
  "cli": {
    "version": ">= 0.48.1"
  },
  "build": {
    "base": {
      "android": {
        "image": "ubuntu-20.04-jdk-11-ndk-r21e"
      }
    },
    "development": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "distribution": "internal",
      "extends": "base",
      "android": {
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
